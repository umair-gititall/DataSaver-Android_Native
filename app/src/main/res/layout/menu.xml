<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Menu">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Profile"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/sun_svgrepo_com" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/header"
                android:layout_gravity="center"
                android:background="@drawable/profile"
                android:clipToOutline="true"
                android:src="@drawable/sun_svgrepo_com" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/name"
                android:layout_marginHorizontal="50dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Full Name"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:enabled="false"
                android:padding="15dp"
                android:singleLine="true" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@+id/email"
                android:layout_marginHorizontal="50dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="E-Mail"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:enabled="false"
                android:padding="15dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_alignLeft="@+id/phone"
                android:layout_marginHorizontal="50dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Phone No"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:enabled="false"
                android:padding="15dp"
                android:singleLine="true"
                android:inputType="phone"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_alignLeft="@+id/password"
                android:layout_marginHorizontal="50dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Password"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:enabled="false"
                android:padding="15dp"
                android:inputType="textPassword"
                android:singleLine="true" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_alignLeft="@+id/radios"
                android:layout_marginHorizontal="23dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Gender"
                android:textStyle="bold" />
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_alignRight="@+id/radios"
                android:layout_marginHorizontal="40dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Notifications"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/radios"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/password"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="5dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Male"
                    android:textSize="10dp"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Female"
                    android:textSize="10dp"/>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/notification"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Yes"
                    android:textSize="10dp"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="No"
                    android:textSize="10dp"/>
            </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/edit"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@+id/radios"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:backgroundTint="@android:color/holo_purple"
                android:text="Edit Profile"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_below="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/bottomInfo"
                    android:layout_width="315dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="10dp"
                        android:text="Updated " />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NaN"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/reset"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/bottomInfo"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/light_transparent_red"
                    android:text="Reset"
                    android:textColor="@color/Red"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
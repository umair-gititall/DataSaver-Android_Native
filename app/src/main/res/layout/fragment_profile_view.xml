<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Menu">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/nav_back" />

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Profile"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/sun_svgrepo_com" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/header"
                android:layout_gravity="center"
                android:background="@drawable/profile"
                android:clipToOutline="true"
                android:src="@drawable/sun_svgrepo_com" />
            
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad Umair"
                android:textStyle="bold"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <RelativeLayout
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/phone"
                android:layout_marginHorizontal="13dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Phone No"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/displayprofile"
                android:padding="15dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/email"
                android:layout_marginHorizontal="18dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="E-Mail"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/displayprofile"
                android:layout_toRightOf="@+id/phone"
                android:padding="15dp"
                />
            </RelativeLayout>

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info1"
                android:layout_alignLeft="@+id/gender"
                android:layout_marginHorizontal="15dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Gender"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/info1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/input"
                android:padding="15dp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender"
                android:layout_alignLeft="@+id/notification"
                android:layout_marginHorizontal="20dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Notifications"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/gender"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:gravity="center_vertical"
                android:padding="15dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notification"
                android:layout_alignLeft="@+id/password"
                android:layout_marginHorizontal="20dp"
                android:background="@color/background"
                android:elevation="0.11dp"
                android:gravity="center"
                android:text="Password"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/notification"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:gravity="center_vertical"
                android:padding="15dp" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>